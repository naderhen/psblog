---
pageable: true
per_page: 10
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>


<div class="posts">
  <h1 class="content-subhead">Recent Posts</h1>

  <% page_articles.each_with_index do |article, i| %>
    <section class="post">
      <header class="post-header">
          <img class="post-avatar" alt="Nader Hendawi&#x27;s avatar" height="48" width="48" src="img/common/ericf-avatar.png">

          <h2 class="post-title"><%= link_to article.title, article %></h2>

          <p class="post-meta">
              By <a class="post-author" href="#">Nader Hendawi</a> under 
              <% article.tags.each do |tag| %>
                <a class="post-category post-category-<%= tag %>" href="#"><%= tag %></a>
              <% end %>
          </p>
      </header>

      <div class="post-description">
        <%= article.summary %>
      </div>
    </section>
  <% end %>
</div>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
